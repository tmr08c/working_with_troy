<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, label: "What's it like working with Troy?" %>
    <%= f.input :name %>
    <%= f.input :relationship %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Leave Review' %>
  </div>
<% end %>
